<div>
  <div>
    <h1>
      List of all responses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Questions
        </th>

        <th>
          Body text
        </th>

        <th>
          Role
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_responses.each do |a_response| %>
      <tr>
        <td>
          <%= a_response.id %>
        </td>

        <td>
          <%= a_response.questions_id %>
        </td>

        <td>
          <%= a_response.body_text %>
        </td>

        <td>
          <%= a_response.role %>
        </td>

        <td>
          <%= time_ago_in_words(a_response.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_response.updated_at) %> ago
        </td>

        <td>
          <% if current_user != nil %>
            <a href="/responses/<%= a_response.id %>">
              Show details
            </a>
          <% else %>
            <a href="/users/sign_in">Sign in</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
